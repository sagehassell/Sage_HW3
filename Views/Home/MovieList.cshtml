@{
    ViewBag.Title = "Current Movies";
}

@model IEnumerable<Sage_HW3.Models.EnterMovie>

<table id="customers">
    <thead>
        <tr>
            <th>Category  </th>
            <th>Title  </th>
            <th>Year  </th>
            <th>Director  </th>
            <th>Rating  </th>
            <th>Edited  </th>
            <th>Is it Lent  </th>
            <th>Notes  </th>
        </tr>
    </thead>

    <tbody>
        @foreach (Sage_HW3.Models.EnterMovie x in Model)
        {
        <tr>
            <td>@x.Category</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent</td>
            <td>@x.Notes</td>
        </tr>
        }
    </tbody>

</table>